@model IEnumerable<BookSale.Models.Author>
<!-- Main -->
					<div id="main">
						<div class="inner">
							<h1>Authors</h1>
							<br />
							<div class="image main">
								<img src="~/images/banner-image-3-1920x500.jpg" class="img-fluid" alt="" />
							</div>

							<div class="row">	
								@foreach (var item in Model)
								{
									  <div class="col-sm-6 text-center">
									<p class="m-n"><em>@item.Text</em></p>

									<p><strong>@item.AuthorName</strong></p><br />
								      </div>
								}
								
								  </div>
						</div>
					</div>