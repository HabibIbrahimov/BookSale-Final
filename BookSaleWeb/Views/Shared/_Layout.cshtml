@using Microsoft.AspNetCore.Http
@using BookSale.Utility
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE HTML>
<html>
	<head>
		<title>Online Book Store Website</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="~/css/bootswatch.css" />
		<link rel="stylesheet" href="~/assets/bootstrap/css/bootstrap.min.css" />
		<link rel="stylesheet" href="~/assets/css/main.css" asp-append-version="true"/>
		<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
		<link rel="stylesheet" href="//cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css"/>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
		<noscript><link rel="stylesheet" href="~/assets/css/noscript.css" /></noscript>
	</head>
	<body class="is-preload">
		<!-- Wrapper -->
			<div id="wrapper">

				<!-- Header -->
		     @await Component.InvokeAsync("Header")
				<!-- Header End -->

				<!-- Menu -->
					<nav id="menu">
						<h2>Menu</h2>
                             
                            
						<partial name="_LoginPartial"/>
						<ul>
						@if (HttpContextAccessor.HttpContext.Session.GetInt32(SD.SessionCart) != null)
						{
							 <li class="nav-item">
                               <a class=nav-link asp-area="Customer" asp-controller="Cart" asp-action="Index">
                                 <i class="bi bi-cart"></i>&nbsp;
								(@HttpContextAccessor.HttpContext.Session.GetInt32(SD.SessionCart))
                               </a>
                             </li>
						}
						else{
							 <li class="nav-item">
                               <a class=nav-link asp-area="Customer" asp-controller="Cart" asp-action="Index">
                                 <i class="bi bi-cart"></i>&nbsp;(0)
                               </a>
                             </li>
						}
						
							<li><a asp-area="Customer" asp-controller="Home" asp-action="Index" class="active">Home</a></li>

							<li><a asp-area="Customer" asp-controller="Product" asp-action="Index" >Products</a></li>
							@if (User.IsInRole(SD.Role_Admin))
						    {
							 <li><a asp-area="Admin" asp-controller="Category" asp-action="Index">Manage Category</a></li>
							 <li><a asp-area="Admin" asp-controller="CoverType" asp-action="Index">Manage CoverType</a></li>
							 <li><a asp-area="Admin" asp-controller="Product" asp-action="Index">Manage Product</a></li>
							 <li><a asp-area="Admin" asp-controller="Company" asp-action="Index">Manage Company</a></li>
							 <li><a asp-area="Identity" asp-page="/Account/Register">Create User</a></li>
							}
							 <li><a asp-area="Admin" asp-controller="Order" asp-action="Index">Manage Order</a></li>
							
							<li>
								<a href="#" class="dropdown-toggle">About</a>

								<ul>
									<li><a href="about.html">About Us</a></li>
									<li><a href="blog.html">Blog</a></li>
									<li><a asp-area="Customer" asp-controller="Testimonials" asp-action="Index" >Testimonials</a></li>
									<li><a href="terms.html">Terms</a></li>
								</ul>
							</li>

							<li><a href="contact.html">Contact Us</a></li>
						</ul>
						
					</nav>
<partial name="_Notification"/>
@RenderBody()

				@await Component.InvokeAsync("Footer")

			</div>

		<!-- Scripts -->
			<script src="~/assets/js/jquery.min.js"></script>
			<script src="~/assets/bootstrap/js/bootstrap.bundle.min.js"></script>
			<script src="~/assets/js/jquery.scrolly.min.js"></script>
			<script src="~/assets/js/jquery.scrollex.min.js"></script>
			<script src="~/assets/js/main.js"></script>
			<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
			<script src="//cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
			<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
			 <script src="https://cdn.tiny.cloud/1/fp271wr4r11h1sfcpx9dzfvy64btf6nlytafubcdrvh7ol7p/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
			 @await RenderSectionAsync("Scripts", required: false)
	</body>
</html>

